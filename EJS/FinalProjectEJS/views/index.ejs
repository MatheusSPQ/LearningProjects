<%- include('./partials/header.ejs') %>
    <main class="container">

        <div class="row g-5">
            <div class="col-md-8">
                <h2 class="pb-4 mb-4 fst-italic border-bottom">
                    Our Posts
                </h2>


                <% posts.forEach(function(post) { %>
                    <article class="blog-post">
                        <h3>
                            <a href="#">
                                <%= post.title %>
                            </a>
                        </h3>
                        <h4>
                            <%= post.subTitle %>
                        </h4>
                        <h5>
                            <%= post.textPost %>
                        </h5>
                        <p>
                            By: <%= post.name %> <br>
                                em: <%= post.dateTime %>
                        </p>
                    </article>
                    <% }) %>
            </div>

            <%- include('./partials/sidebar.ejs') %>


                <hr>
                <div class="container">
                    <form action="/" method="post">
                        <h1>Share Your Thoughts</h1><br>
                        <div class="info">
                            <div class="col-4">
                                <label class="form-label" for="name">Name:</label>
                                <input type="text" name="name" class="form-control" placeholder="Ex: Matheus"
                                    required><br><br>
                            </div>
                            <div class="col-4">
                                <label class="form-label" for="title">Title:</label>
                                <input type="text" name="title" class="form-control" placeholder="Ex: Amazing Title"
                                    required><br><br>
                            </div>
                            <div class="col-4">
                                <label class="form-label" for="subTitle">SubTitle:</label>
                                <input type="text" name="subTitle" class="form-control"
                                    placeholder="Ex: This is my fantastic SubTitle" required><br><br>
                            </div>
                        </div>
                        <p>Message</p>
                        <div>
                            <textarea rows="4" cols="100" name="textPost" required></textarea>
                        </div>
                        <button class="btn btn-light" type="submit" href="/">Submit</button>
                    </form>
                </div>



        </div>



    </main>


    <%- include('./partials/footer.ejs') %>